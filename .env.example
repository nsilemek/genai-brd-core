# =============================
# Core
# =============================
USE_LLM=0


# =============================
# LLM (OpenAI-compatible gateway)
# Only required if USE_LLM=1
# =============================
LLM_MODE=openai
LLM_BASE_URL=
LLM_API_KEY=
LLM_MODEL=gpt-oss-20b
LLM_TIMEOUT_SEC=30
LLM_TEMPERATURE=0.2
LLM_MAX_TOKENS=600


# =============================
# Confluence (RAG ingest)
# =============================
CONFLUENCE_BASE_URL=
CONFLUENCE_USERNAME=
CONFLUENCE_API_TOKEN=
CONFLUENCE_SPACE_KEY=
# Optional: restrict to specific pages
CONFLUENCE_ROOT_PAGE_ID=
# Optional: limit pages fetched
CONFLUENCE_LIMIT=50


# =============================
# Vector store (Chroma persistence)
# =============================
VRAI_RAG_BASE_DIR=data/indexes


# =============================
# Embeddings
# Choose one:
#   EMBEDDING_MODE=local  -> sentence-transformers (local)
#   EMBEDDING_MODE=gemma  -> corporate embedding endpoint (gemma-300)
# =============================
EMBEDDING_MODE=local

# Local embeddings (only if EMBEDDING_MODE=local)
VRAI_RAG_EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2

# Gemma embeddings (only if EMBEDDING_MODE=gemma)
GEMMA_EMBEDDING_URL=
GEMMA_API_KEY=
GEMMA_MODEL=gemma-300
EMBEDDING_TIMEOUT_SEC=30
